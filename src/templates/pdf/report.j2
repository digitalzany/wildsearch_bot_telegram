        <td>{{ goods_overview.expensive.purchases.number }} {{ goods_overview.expensive.purchases.digits }} {{ goods_overview.expensive.purchases.units }}</td>
        <td>{{ goods_overview.cheap.purchases.number }} {{ goods_overview.cheap.purchases.digits }} {{ goods_overview.cheap.purchases.units }}</td>
        <td>{{ goods_overview.old.purchases.number }} {{ goods_overview.old.purchases.digits }} {{ goods_overview.old.purchases.units }}</td>
        <td>{{ goods_overview.old.purchases.number }} {{ goods_overview.old.purchases.digits }} {{ goods_overview.old.purchases.units }}</td>
    </tr>
    <tr>
        <td>Продаж всего (руб.)</td>
        <td>{{ goods_overview.expensive.turnover.number }} {{ goods_overview.expensive.turnover.digits }} {{ goods_overview.expensive.turnover.units }}</td>
        <td>{{ goods_overview.cheap.turnover.number }} {{ goods_overview.cheap.turnover.digits }} {{ goods_overview.cheap.turnover.units }}</td>
