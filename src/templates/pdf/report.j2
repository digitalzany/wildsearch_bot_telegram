        <td>{{ goods_overview.old.turnover.number }} {{ goods_overview.old.turnover.digits }} {{ goods_overview.old.turnover.units }}</td>
    </tr>
    <tr>
        <td>Первый отзыв</td>
        <td>{{ goods_overview.expensive.first_review_date }}</td>
        <td>{{ goods_overview.cheap.first_review_date }}</td>
        <td>{{ goods_overview.old.first_review_date }}</td>
        <td>{{ goods_overview.bad.first_review_date }}</td>
    </tr>
    <tr>
        <td>Рейтинг</td>
        <td>{{ goods_overview.expensive.average_rating }}/5</td>
        <td>{{ goods_overview.cheap.average_rating }}/5</td>
        <td>{{ goods_overview.old.average_rating }}/5</td>
        <td>{{ goods_overview.bad.average_rating }}/5</td>
    </tr>
